---
const links = [
  { href: "#servicios", label: "Servicios" },
  { href: "#contacto",  label: "Contacto" },
];
---
<header class="sticky top-0 z-50 backdrop-blur bg-ariwa-bg/70 border-b border-white/10">
  <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img src="/logo-ariwa.svg" alt="Ariwa Labs" class="h-8 w-auto" loading="lazy" />
      <div class="leading-none">
        <span class="font-extrabold tracking-tight">Ariwa Labs</span>
        <span class="block text-xs text-ariwa-muted -mt-0.5">Software • Data • IA</span>
      </div>
    </a>
    <nav class="hidden md:flex items-center gap-6">
      {links.map(l => (
        <a href={l.href} class="text-sm text-white/80 hover:text-white transition">{l.label}</a>
      ))}
      <a href="#contacto" class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-ariwa-red font-semibold">
        Escríbenos
        <svg viewBox="0 0 24 24" class="w-4 h-4" fill="none" stroke="currentColor"><path stroke-width="2" d="M5 12h14M13 5l7 7-7 7"/></svg>
      </a>
    </nav>
    <button class="md:hidden p-2 rounded-lg border border-white/10" aria-label="Menú"
      onclick="document.getElementById('mobile-nav')?.classList.toggle('hidden')">
      <svg viewBox="0 0 24 24" class="w-6 h-6" fill="none" stroke="currentColor"><path stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
    </button>
  </div>
  <div id="mobile-nav" class="md:hidden hidden border-t border-white/10">
    <nav class="px-4 py-3 flex flex-col gap-3">
      {links.map(l => (
        <a href={l.href} class="text-sm text-white/80 hover:text-white transition">{l.label}</a>
      ))}
      <a href="#contacto" class="inline-flex items-center justify-center gap-2 px-4 py-2 rounded-xl bg-ariwa-red font-semibold">
        Escríbenos
      </a>
    </nav>
  </div>
</header>
