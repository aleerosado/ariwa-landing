---
import services from "../content/services.json";
---
<section id="servicios" class="py-16 border-b border-white/10">
  <div class="max-w-6xl mx-auto px-4">
    <div class="max-w-2xl">
      <h2 class="text-3xl md:text-4xl font-extrabold">Servicios</h2>
      <p class="mt-2 text-ariwa-muted">Del discovery al despliegue y la mejora continua.</p>
    </div>

    <div class="mt-8 grid md:grid-cols-3 gap-5">
      {services.map(s => (
        <article class="rounded-2xl border border-white/10 bg-[#0F1A2B] p-5">
          <span class="inline-block text-[11px] tracking-[.14em] uppercase text-red-200 bg-ariwa-red/10 border border-ariwa-red/30 rounded-full px-2.5 py-1">Ariwa</span>
          <h3 class="mt-3 text-xl font-bold">{s.title}</h3>
          <ul class="mt-2 space-y-2 text-sm text-ariwa-muted">
            {s.bullets.map(b => (
              <li class="flex gap-2">
                <svg viewBox="0 0 24 24" class="w-4 h-4 flex-none" fill="none" stroke="currentColor"><path stroke-width="2" d="m5 12 4 4 10-10"/></svg>
                <span>{b}</span>
              </li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </div>
</section>
